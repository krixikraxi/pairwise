{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="page-header">
            <h1>Manage your Invoices!</h1>
            <a href="{{ path('createinvoice') }}">Create a new Invoice</a>
        </div>

        <table class="table table-hover" id="notbilledbills">
            <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Paying Partner</th>
            </tr>
            </thead>
            <tbody>
            {% for invoice in invoices %}
                <tr>
                    <td>{{ invoice.id }}</td>
                    <td>{{ invoice.invoicedate | date("m.d.Y h:m") }}</td>
                    <td>{{ invoice.amount | number_format(2, ',', '.') }}â‚¬</td>
                    <td>{{ invoice.payingpartner }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

