{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="page-header">
            <h1>Show all Bills!</h1>
        </div>

        <table class="table table-hover" id="bills">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Partner</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Billed</th>
                </tr>
                </thead>
            <tbody>
                {% for bill in bills %}
                    <tr>
                        <td>{{ bill.id }}</td>
                        <td>{{ bill.partner.partnername }}</td>
                        <td>{{ bill.billname }}</td>
                        <td>{{ bill.billdescription }}</td>
                        <td>{{ bill.amount }}</td>
                        <td>{{ bill.billdate | date("m.d.Y h:m") }}</td>
                        <td>{{ bill.billed ? 'Yes':'No' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}

{% block stylesheets %}
{% endblock %}